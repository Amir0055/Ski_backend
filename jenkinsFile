pipeline{
    agent any
    stages {
        stage("Testing Maven"){
            steps {
                sh "mvn -version"
            }
        }
        stage("Testing JDK"){
            steps {
                sh "java -version"
            }
        }
        stage("Chekout Git"){
            steps {
                echo "Pulling"
            }
        }
        stage('MVN COMPILE') {
            steps{
                sh 'mvn compile'
        }
}
    stage('MVN SONARQUBE') {
            steps{
                  sh 'mvn sonar:sonar -Dsonar.login=admin -Dsonar.password=123456'
            }
        }
      stage('MVN Nexus') {
            steps{
                sh 'mvn deploy -Dmaven.test.skip=true'
        }
}
        stage('Build Docker Image Backend') {
            steps {
                    sh "docker build -t chedyakh/backend ."
                    }
    }
        stage('Push Docker Image to Docker Hub') {
      steps{
                sh 'docker login -u chedyakh -p chedyaKH005'
                sh 'docker push chedyakh/backend'
        }

    }
        stage('Verify Docker Compose Installation') {
            steps {
                sh 'docker compose version'
                    }
}

        stage('Start Docker Compose') {
            steps {
                    sh 'docker compose up -d'
                }
            }
        stage('check Docker Compose') {
            steps {
                    sh 'docker compose ps'
                }
            }
    }
}
